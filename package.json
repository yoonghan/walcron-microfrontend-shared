{
  "name": "walcron-microfrontend-shared",
  "description": "A shared library used within the eco-system of Walcron",
  "author": "Walcron Coorperation",
  "license": "MIT",
  "homepage": "https://www.walcron.com",
  "repository": {
    "type": "git",
    "url": "https://dev.azure.com/mailyoonghan0975/Walcron/_git/walcron-microfrontend-shared.git"
  },
  "publishConfig": {
    "registry": "https://pkgs.dev.azure.com/mailyoonghan0975/_packaging/mailyoonghan0975/npm/registry/"
  },
  "keywords": [
    "walcron",
    "walcoorperation",
    "shared walcron components"
  ],
  "version": "10.10.1",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "scripts": {
    "dev": "node --loader ts-node/esm ./server/index.ts",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "e2e": "export NODE_ENV=development && playwright test",
    "e2e:ui": "playwright test --ui",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "dependency:check": "knip",
    "storybook": "export NODE_ENV=storybook && storybook dev -p 6006",
    "build-storybook": "export NODE_ENV=storybook && storybook build",
    "prepack": "npm run test:ci && npm run build && clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.43.1",
    "@storybook/addon-essentials": "^8.1.3",
    "@storybook/addon-interactions": "^8.1.3",
    "@storybook/addon-links": "^8.1.3",
    "@storybook/react": "^8.1.3",
    "@storybook/react-vite": "^8.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^1.6.0",
    "clean-package": "^2.2.0",
    "compression": "^1.7.4",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.12",
    "express": "^4.18.2",
    "jsdom": "^22.1.0",
    "knip": "^5.16.0",
    "sirv": "^2.0.3",
    "storybook": "^8.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5",
    "vike": "^0.4.172",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0",
    "web-vitals": "^3.5.2"
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "devDependencies"
    ]
  }
}